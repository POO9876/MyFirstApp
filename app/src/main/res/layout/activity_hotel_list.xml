<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">


  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_height="wrap_content">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



        <LinearLayout
            android:id="@+id/headhotel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:background="#f9f8f8"
            android:paddingRight="10dp" >
            <View
                android:background="#f3ffd504"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp" />

            <TextView
                android:id="@+id/pname"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"
                android:text="List of Gardens &amp; Dharamshala"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:background="#f3ffd504"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="2dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_below="@+id/headhotel"
            android:id="@+id/footerhotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView

                android:background="#d6f5f5f5"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listView" />


        </LinearLayout>


    </RelativeLayout>

  </LinearLayout>

</ScrollView>